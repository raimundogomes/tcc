<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="br.ufrn.imd.sgr.activities.ConfiguracoesActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_ordenacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordenar por:"
            />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio_group_ordenacao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/radio_numero_requisicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numero_requisicao"
                />
            <RadioButton android:id="@+id/radio_data_requisicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_requisicao"
                />
            <RadioButton android:id="@+id/radio_nome_paciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome_paciente"
                />
            <RadioButton android:id="@+id/radio_status_requisicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/situacao_requisicao"
                />
        </RadioGroup>

        <Button
            android:layout_width="wrap_content" android:id="@+id/botao_salvar_configuracao"
            android:layout_height="wrap_content" android:text="Salvar" />
    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>