<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="br.ufrn.imd.sgr.activities.NovaRequisicaoActivity" >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWindowBackground"
            android:text="INFORMAÇÕES SOBRE O PACIENTE (OBRIGATÓRIO)"
            android:textStyle="bold" />

        <TextView android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Submetido a algum procedimento invasivo?"/>
        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio_group_procedimento_invasivo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/radio_proced_invasivo_sim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sim"
                />
            <RadioButton android:id="@+id/radio_proced_invasivo_nao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_nao"
                />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content" android:textColor="@color/primary_text"
            android:layout_height="wrap_content" android:text="Internado nas últimas 72h?"/>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio_group_internado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/radio_internado_sim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sim"
                />
            <RadioButton android:id="@+id/radio_internado_nao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_nao"
                />
        </RadioGroup>

        <TextView android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Fez uso de antibióticos nos últimos 10 dias?"/>
        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio_group_antibiotico"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/radio_antibiotico_sim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sim"
                />
            <RadioButton android:id="@+id/radio_antibiotico_nao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_nao"
                />
        </RadioGroup>

        <Switch
            android:id="@+id/culturaSecrecao"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWindowBackground"
            android:layoutDirection="rtl"
            android:text=" CULTURA DE SECREÇÃO"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alwaysDrawnWithCache="false"
            android:baselineAligned="false"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBoxFeridaOperatoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ferida Operatória" />

            <CheckBox
                android:id="@+id/checkBoxAbscessos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abscessos" />

            <CheckBox
                android:id="@+id/checkBoxUlceras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Úlceras" />

            <CheckBox
                android:id="@+id/checkBoxFragmento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragmento de tecido" />
        </LinearLayout>

        <Switch
            android:id="@+id/txtCulturaSangue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWindowBackground"
            android:layoutDirection="rtl"
            android:text=" HEMOCULTURA"
            android:textStyle="bold" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio_group_hemocultura"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
          >
            <RadioButton android:id="@+id/radio_hemocultura_veia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veia periférica"  android:enabled="false"
                />
            <RadioButton android:id="@+id/radio_hemocultura_cateter_central"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:enabled="false"
                android:text="Cateter Central"
                />
            <RadioButton android:id="@+id/radio_hemocultura_cateter_umbilical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:enabled="false"
                android:text="Cateter Umbilical"
                />
            <RadioButton android:id="@+id/radio_hemocultura_arteria"
                android:layout_width="wrap_content" android:enabled="false"
                android:layout_height="wrap_content"
                android:text="Artéria"
                />
        </RadioGroup>

        <Switch
            android:id="@+id/txtCulturaUrina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWindowBackground"
            android:layoutDirection="rtl"
            android:text=" URUCULTURA"
            android:textStyle="bold" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio_group_urucultura"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/radio_urucultura_jato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jato médio" android:enabled="false"
                />
            <RadioButton android:id="@+id/radio_urucultura_svd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SVD" android:enabled="false"
                />
            <RadioButton android:id="@+id/radio_urucultura_sonda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sonda de alívio" android:enabled="false"
                />
            <RadioButton android:id="@+id/radio_urucultura_saco_coletor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saco coletor" android:enabled="false"
                />
            <RadioButton android:id="@+id/radio_urucultura_puncao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Punção subpúbica" android:enabled="false"
                />
        </RadioGroup>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWindowBackground"
            android:text="DATA e HORA"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonCalendarioSangue"
                android:src="@drawable/calendario"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:ems="10"
                android:text="Data e hora da coleta"
                android:id="@+id/editTextDataColeta"
                 />
        </LinearLayout>


        <Button android:layout_margin="@dimen/text_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:id="@+id/buttonSalvar" />


    </LinearLayout>

  </ScrollView>
</android.support.design.widget.CoordinatorLayout>
