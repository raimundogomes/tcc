<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:theme="@style/AppTheme.TemaSGR">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_numero_req"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÂº"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/numeroRequisicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_dataRequisicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  android:layout_margin="3dp"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paciente: "
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/text_paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  android:layout_margin="3dp"
            android:gravity="right" android:layout_gravity="top"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_exames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exames"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_exames" android:layout_marginLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>